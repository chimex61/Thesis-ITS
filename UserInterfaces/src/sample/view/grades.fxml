<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" styleClass="background" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.GradesController">
   <top>
      <HBox alignment="CENTER_LEFT" styleClass="header" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="label-header" text="Grades">
               <font>
                  <Font size="32.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="backToMenu" mnemonicParsing="false" onAction="#handleAction" text="Back To Menu" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <VBox styleClass="body">
         <children>
            <TableView fx:id="tableView" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="examTitleColumn" prefWidth="130.0" text="Exam Title" />
                  <TableColumn fx:id="rawGradeColumn" prefWidth="90.0" text="Raw Grade" />
                  <TableColumn fx:id="totalItemsColumn" prefWidth="90.0" text="Total Items" />
                  <TableColumn fx:id="statusColumn" prefWidth="60.0" text="Status" />
                  <TableColumn fx:id="percentGradeColumn" prefWidth="110.0" text="Percent Grade" />
              </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" styleClass="footer" BorderPane.alignment="CENTER">
         <children>
            <Label text="Overall Grade:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="overallLabel" styleClass="label-subheader">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font></Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
   <right>
      <VBox alignment="CENTER_LEFT" styleClass="list-background">
         <children>
            <Label styleClass="list-header" text="Average Grades:">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <ListView fx:id="averageGradesListView" prefWidth="120.0" BorderPane.alignment="CENTER" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </right>
</BorderPane>
