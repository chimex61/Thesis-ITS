            <Button fx:id="itemsSliderLeftButton" mnemonicParsing="false" onAction="#slideLeft" text="&lt;" />
            <Button fx:id="itemsSliderRightButton" mnemonicParsing="false" onAction="#slideRight" text="&gt;" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <VBox fx:id="choicesVBox" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
