                  <Label fx:id="examTitleLabel" text="Insert Title Here" textAlignment="CENTER">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="submitExamButton" mnemonicParsing="false" onAction="#submitExam" text="Submit Exam">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="620.0">
               <children>
                  <Label prefHeight="20.0" prefWidth="100.0" text="Time Left: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Slider fx:id="timeLeftSlider" blockIncrement="1.0" majorTickUnit="5.0" max="15.0" minorTickCount="10" prefHeight="20.0" prefWidth="500.0" showTickLabels="true" showTickMarks="true" HBox.hgrow="ALWAYS" />
