                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextArea>
                  <StackPane>
                     <children>
                        <VBox fx:id="hintPane">
                           <children>
                              <TextArea fx:id="hintTextArea" editable="false" prefHeight="80.0" prefWidth="200.0" wrapText="true" />
                           </children>
                        </VBox>
                        <Button fx:id="hintButton" mnemonicParsing="false" onAction="#hintButtonAction" text="HINT">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </StackPane>
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   <bottom>
      <HBox alignment="CENTER_LEFT" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Items" />
