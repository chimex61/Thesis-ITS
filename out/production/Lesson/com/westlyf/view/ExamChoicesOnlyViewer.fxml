<BorderPane fx:id="pane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.westlyf.controller.ExamChoicesOnlyViewerController">
   <top>
      <VBox alignment="CENTER">
         <children>
            <HBox alignment="TOP_CENTER">
