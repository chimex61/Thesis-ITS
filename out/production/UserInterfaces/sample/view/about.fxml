<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox styleClass="background" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.AboutController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="5.0" styleClass="header">
         <children>
            <VBox>
               <children>
                  <ImageView fitHeight="90.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../style/images/free-apples.png" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label styleClass="label-header" text="Free Apples">
                     <font>
                        <Font size="38.0" />
                     </font>
                  </Label>
                  <Label styleClass="label-subheader" text="Version 1.0">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" styleClass="body">
         <children>
            <TextArea fx:id="aboutTextArea" editable="false" prefHeight="200.0" wrapText="true" HBox.hgrow="ALWAYS" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_RIGHT" styleClass="footer">
         <children>
            <Label text="\@Copyright 2016" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
