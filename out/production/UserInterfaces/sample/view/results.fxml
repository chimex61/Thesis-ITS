      <HBox alignment="CENTER" prefHeight="50.0" styleClass="header">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="titleLabel" styleClass="label-header" text="Title" BorderPane.alignment="CENTER">
               <font>
                  <Font size="32.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="gradeLabel" styleClass="label-subheader" text="Grade:">
