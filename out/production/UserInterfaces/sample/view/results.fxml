      <HBox alignment="CENTER">
         <children>
            <VBox styleClass="body">
               <children>
                  <TableView fx:id="tableView" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="pointsColumn" prefWidth="50.0" text="Points" />
                      <TableColumn fx:id="choicesColumn" prefWidth="250.0" sortable="false" text="Choices" />
                        <TableColumn fx:id="correctAnswerColumn" prefWidth="250.0" sortable="false" text="Correct Answer" />
