                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Slider fx:id="timeLeftSlider" blockIncrement="1.0" majorTickUnit="5.0" max="15.0" minorTickCount="10" prefHeight="40.0" prefWidth="220.0" showTickLabels="true" showTickMarks="true" />
