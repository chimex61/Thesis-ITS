                  </HBox>
                  <StackPane>
                     <children>
                        <VBox fx:id="hintPane">
                           <children>
                              <TextArea fx:id="hintTextArea" editable="false" prefHeight="100.0" prefWidth="200.0" wrapText="true" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER">
                           <children>
                              <Button fx:id="hintButton" mnemonicParsing="false" onAction="#hintButtonAction" text="HINT">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Button>
                           </children>
                        </VBox>
                     </children>
                  </StackPane>
               </children>
            </VBox>
            <VBox>
               <children>
                  <TextArea fx:id="questionTextArea" editable="false" prefHeight="180.0" prefWidth="350.0" wrapText="true" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextArea>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </top>
   <bottom>
      <HBox alignment="CENTER_LEFT" spacing="5.0" styleClass="footer" BorderPane.alignment="CENTER">
         <children>
            <Label text="Items" />
