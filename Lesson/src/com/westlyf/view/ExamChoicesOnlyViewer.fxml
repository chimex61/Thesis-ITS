<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.westlyf.controller.ExamChoicesOnlyViewerController">
   <top>
      <VBox alignment="CENTER">
         <children>
            <Label fx:id="examTitleLabel" text="Insert Title Here" textAlignment="CENTER">
               <font>
                  <Font size="40.0" />
               </font>
            </Label>
            <HBox alignment="CENTER">
               <children>
                  <Label prefHeight="20.0" prefWidth="126.0" text="Time Left: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Slider fx:id="timeLeftSlider" blockIncrement="1.0" disable="true" majorTickUnit="10.0" max="60.0" minorTickCount="10" prefHeight="38.0" prefWidth="588.0" showTickLabels="true" showTickMarks="true" />
               </children>
            </HBox>
            <HBox alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                  <TextArea fx:id="questionTextArea" editable="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="80.0" prefWidth="480.0" wrapText="true">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextArea>
                  <VBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="stopExamButton" mnemonicParsing="false" onAction="#stopExam" text="Stop Exam">
                           <font>
                              <Font size="14.0" />
                           </font></Button>
                        <Button fx:id="submitExamButton" mnemonicParsing="false" onAction="#submitExam" text="Submit Exam">
                           <font>
                              <Font size="14.0" />
                           </font></Button>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </top>
   <center>
      <VBox fx:id="choicesVBox" alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_LEFT" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Items" />
            <Slider fx:id="itemsSlider" blockIncrement="1.0" majorTickUnit="1.0" max="25.0" min="1.0" minorTickCount="0" prefHeight="38.0" prefWidth="507.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
            <Button fx:id="itemsSliderLeftButton" mnemonicParsing="false" onAction="#slideLeft" text="&lt;" />
            <Button fx:id="itemsSliderRightButton" mnemonicParsing="false" onAction="#slideRight" text="&gt;" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <right>
      <VBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="HINT">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextArea fx:id="hintTextArea" editable="false" prefHeight="200.0" prefWidth="200.0" visible="false" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </right>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
